<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.relaxcloud.activity.SplashActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/actSplash_vpIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/actSplash_tlIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabBackground="@drawable/selector_indicator"
        app:tabGravity="center"
        app:tabIndicatorHeight="@dimen/_0dp"/>

</android.support.constraint.ConstraintLayout>
