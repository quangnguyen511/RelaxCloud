<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:padding="@dimen/_16dp"
    tools:context="com.android.relaxcloud.fragment.intro.IntroFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_swipe_right" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_nature" />

        <ImageView
            android:layout_width="@dimen/_25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_swipe_left" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/_50dp"
        android:text="@string/intro3"
        android:textSize="@dimen/textSize_intro" />

</LinearLayout>
